package com.optum.comet.mctmcf.constants;

public interface CometConstants {

	/**
	 * This enum can used to fill up the actor value for the application vos
	 * 
	 * @author 142037
	 */
	enum ACTORS {
		Comet("MCTMCF"), RULES("EXTERNAL_SERVICE"), SERVICE("INTERNAL_SERVICE");

		private String description;

		private ACTORS(String description) {
			this.description = description;
		}

		public String getDescription() {
			return this.description;
		}

		public static ACTORS fromValue(String value) throws IllegalArgumentException {
			if (value == null || value.trim().length() == 0)
				throw new IllegalArgumentException("Invalid paramater");
			ACTORS retVal = null;
			for (ACTORS actor : ACTORS.values()) {
				if (value.equals(actor.getDescription())) {
					retVal = actor;
					break;
				}
			}
			return retVal;
		}
	}
	
	
	
	// Message Loading Status
	public enum LoadStatus {
		NEW, // = New Message not processed
		WIP, // = Message is under processing
		ERROR, // = Can't process the message
		ALREADY_RESOLVED, // = Can't Process as already resolved
		ICN_NOT_FOUND, // = Status update received for a claim which not exists
		COMPLETE, // = Processing Complete
		DISCARDED, // Message is ignored or discarded
		ICN_NT_FND_RPSTD, // When ICN_NOT_FOUND messages will be reposted
		ICNSFX_NOT_FOUND, // Status update received for a claim suffix which not
							// exists
		ICNSFX_NT_FND_RPSTD // Status update received for a claim suffix which
							// not exists and system repost the message to
							// corresponding queue
	};

	// Claim Message Type
