public class ExceptionUtil {
	/**
	 * return a CWFException Message
	 * 
	 * @param location
	 * @param reasonarg
	 * @return
	 */
	public static CometException getExceptionForReason(String location, String reasonarg) {
		CometConstants.ACTORS actor = CometConstants.ACTORS.Comet;
		CometExceptionBean exceptionBean = new CometExceptionBean(reasonarg, 
				null, Calendar.getInstance(), actor, location);
		CometException bean = new CometException(exceptionBean,reasonarg);
		return  bean; 
	}
}
